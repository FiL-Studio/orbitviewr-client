{% macro loop(guidedExperiencesTours, tour, lang) %}

	{% for experience in guidedExperiencesTours %}

			{% if experience.tourPicker[0].slug == tour.slug %}

				<a href="{{ '/' + lang + '/' + tour.slug + '/' + experience.slug | url }}">
					{% include "tours/preview.njk" %}
				</a>

			{% endif %}

	{% endfor %}

{% endmacro %}
