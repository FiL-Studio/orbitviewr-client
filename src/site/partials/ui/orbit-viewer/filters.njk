{% from 'ui/filter.njk' import filter as filter %}
{% from 'ui/panel-times.njk' import panelTimes as panelTimes %}

<div class="filters">
	
	<button class="filters-button" data-panel-button="filters">

		<svg viewBox="0 0 22 17.1" xml:space="preserve">
			<path d="M16.7,2.1c-0.2-1.3-1.4-2.2-2.7-2c-1.1,0.1-1.9,1-2,2H0v0.7h12c0.2,1.3,1.4,2.2,2.7,2	c1.1-0.1,1.9-1,2-2H22V2.1H16.7z"/>
			<path d="M7.4,6.1C6.2,6.1,5.2,7,5,8.2H0v0.7h5c0.2,1.3,1.4,2.2,2.7,2c1.1-0.1,1.9-1,2-2H22V8.2	H9.7C9.6,7,8.6,6.1,7.4,6.1z"/>
			<path d="M12.3,12.3c-1.2,0-2.2,0.9-2.4,2H0V15h10c0.2,1.3,1.4,2.2,2.7,2c1.1-0.1,1.9-1,2-2H22	v-0.7h-7.3C14.5,13.1,13.5,12.3,12.3,12.3z"/>
		</svg>

	</button>

</div>

<div class="panel" data-panel="filters">

	<div class="panel-top panel-separator">

		{# todo que aixo vingui del back #}
		{# todo que aixo pugui tenir icona #}
		<div class="panel-top-content">
			<h3>Filtering tool</h3>
			<h2>Customize your view</h2>
		</div>

		{{ panelTimes('filters') }}
		
	</div>

	<div class="panel-section panel-separator">
		<h3>Object type</h3>
		{{ filter(categories) }}
	</div>

	<div class="panel-section">
		<h3>Object characteristics</h3>

		<div class="distance-input custom-input" type="double-range" style="--range-1:0;--range-2:1;">
			<p>Near</p>
			<p>Far</p>

			<div class="fake-range"></div>

			<div class="handle handle-1"></div>
			<div class="handle handle-2"></div>

			<input type="range" min="0" max="1" value="0" step="0.01" name="near">
			<input type="range" min="0" max="1" value="1" step="0.01" name="far">
		</div>
	</div>

	<div class="panel-section">

		<div class="filter-buttons">

			<button data-button="filters-apply" class="ui__button">
				<p>Apply Filter</p>
			</button>

			<button data-button="filters-reset" class="ui__button ghost-button">
				<p>Reset Filter</p>
			</button>

		</div>

	</div>

</div>