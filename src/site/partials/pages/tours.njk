{% from 'tours/loop.njk' import loop as loop %}
{% from 'ui/panel-times.njk' import panelTimes as panelTimes %}

<div class="tours-header">
  <h1>{{ guidedExperiences[lang].title }}</h1>
  <h3>{{ tour.title }}</h3>
  {% include "tours/pagination.njk" %}  
</div>

<div class="tours-filters">
  
  <button class="sort-button" data-panel-button="tour-sort-{{ tour.slug }}">
    
    {% include "ui/icons/sort.njk" %}

    <p>{{ generic[lang].strings['sort-by'] }}</p>
  </button>
  
  <button class="search-button">

    {% include "ui/icons/lense.njk" %}
    <p>{{ generic[lang].strings.search }}</p>

    <div class="active-search">
      <input type="text" name="tour-search">
      <label for="tour-search">{{ generic[lang]['special-strings']['search-placeholder'] }}</label>
    </div>

  </button>

</div>

{# ACTIVE TOURS #}
<div class="tours-list">
  {{ loop(guidedExperiencesTours[lang], tour, lang ) }}
</div>

<div class="tours-button buttons__wrapper">

  <a href="{{ '/' + lang + '/guided-experiences' | url }}" class="ui__button button_max-size">
    {% include "ui/icons/arrow-prev.njk" %}
    <p>{{ generic[lang]['special-strings'].tours }}</p>
  </a>

</div>


{# Filter PANEL #}
<div class="panel" data-panel="tour-sort-{{ tour.slug }}">

	<div class="panel-top panel-separator">

		{# todo que aixo vingui del back #}
		<div class="panel-top-content">
      {% include "ui/icons/sort.njk" %}
      <div>
        <h3>{{ generic[lang].menus['sort-menu'].title }}</h3>
        <h2>{{ generic[lang].menus['sort-menu'].subtitle }}</h2>
      </div>
		</div>

		{{ panelTimes('tour-sort-' + tour.slug ) }}

	</div>

	<div class="panel-section panel-separator">
    
    <h3>{{ generic[lang].menus['sort-menu'].sections[0] }}</h3>

    <ul>
      
      <li>
        <input class="custom-input" type="radio" id="sort-new" name="sort-radio" value="new" checked>
        <label for="sort-new"><div class="sort-bullet"><div></div></div>{{ generic[lang].menus['sort-menu'].section0[0] }}</label>
      </li>
      
      <li>
        <input class="custom-input" type="radio" id="sort-old" name="sort-radio" value="old">
        <label for="sort-old"><div class="sort-bullet"><div></div></div>{{ generic[lang].menus['sort-menu'].section0[1] }}</label>
      </li>
    
    </ul>

  </div>

  <div class="panel-section">
    
    <h3>{{ generic[lang].menus['sort-menu'].sections[1] }}</h3>

    <ul>

      <li>
        <input class="custom-input" type="radio" id="sort-less-duration" name="sort-radio" value="less-duration">
        <label for="sort-less-duration"><div class="sort-bullet"><div></div></div>{{ generic[lang].menus['sort-menu'].section1[0] }}</label>
      </li>
      
      <li>
        <input class="custom-input" type="radio" id="sort-more-duration" name="sort-radio" value="more-duration">
        <label for="sort-more-duration"><div class="sort-bullet"><div></div></div>{{ generic[lang].menus['sort-menu'].section1[1] }}</label>
      </li>

      <li>
        <input class="custom-input" type="radio" id="sort-less-complexity" name="sort-radio" value="less-complexity">
        <label for="sort-less-complexity"><div class="sort-bullet"><div></div></div>{{ generic[lang].menus['sort-menu'].section1[2] }}</label>
      </li>

      <li>
        <input class="custom-input" type="radio" id="sort-more-complexity" name="sort-radio" value="more-complexity">
        <label for="sort-more-complexity"><div class="sort-bullet"><div></div></div>{{ generic[lang].menus['sort-menu'].section1[3] }}</label>
      </li>
    
    </ul>

  </div>

  <div class="sort-buttons">

    <button data-button="sort-apply" class="ui__button">
      <p>{{ generic[lang].menus['sort-menu']['apply-sort'] }}</p>
    </button>

    <button data-button="sort-reset" class="ui__button ghost-button">
      <p>{{ generic[lang].menus['sort-menu']['reset-sort'] }}</p>
    </button>

  </div>


</div>


