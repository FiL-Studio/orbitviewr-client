---
layout: base
pageTemplate: guided-experiences-tours
pagination:
  alias: experience
  data: guidedExperiencesTours
  size: 1
permalink: "{{ experience.tourPicker[0].slug + '/' + experience.slug | slug }}/"
---

{# 
eleventyComputed:
title: "{{ project.seo.title }}"
description: "{{ project.seo.description }}"
image: "{{ project.seo.seo_image }}" #}

<section class="active" data-slide="initialSlide" data-slide-index="0" data-parent-slug="{{ experience.tourPicker[0].slug }}">
  
    <div class="center-content">
      <h3>{{ experience.title }}</h3>

      <div class="sub-text">
        {# TODO missing icon #}
        <div class="duration">
          <h4>Duration</h4>
          <p>5m</p>
        </div>

        <div class="complexity">
          <h4>Complexity</h4>
          <div class="{{ 'active' if experience.complexity >= 1 }}"></div><div class="{{ 'active' if experience.complexity >= 2 }}"></div><div class="{{ 'active' if experience.complexity >= 3 }}"></div><div class="{{ 'active' if experience.complexity >= 4 }}"></div><div class="{{ 'active' if experience.complexity >= 5 }}"></div>
          <p>{% if experience.complexity < 3 %}Easy{% else %}Hard{% endif %}</p>
        </div>
      </div>
    </div>

    <div class="buttons__wrapper">

      <button data-button="initialSlide-0-prev" class="ui__button">
        <p>Back</p>
      </button>

      <button data-button="initialSlide-0-next" class="ui__button">
        <p>Let's start</p>
      </button>

    </div>

</section>

{% for slide in experience.flexible %}

  <section data-slide="{{ slide.typeHandle }}" data-slide-index="{{ loop.index }}">
    
    {% if slide.typeHandle == 'introSlide' or slide.typeHandle == 'funFactSlide' %}

        <div class="media">
          {% if slide.typeHandle == 'introSlide' %}
            <div class="thumb" style="background-image: url(https://picsum.photos/300/300); "></div>
          {% else %}
            <div class="icon"></div>
          {% endif %}
        </div>

        <div class="content">
          {% if slide.slideTitle %}
            <h3>{{ slide.slideTitle }}</h3>
          {% else %}
            <h3>Fun Fact</h3>
          {% endif %}
          {% if slide.subTitle %}<h4>{{ slide.subTitle }}</h4>{% endif %}
          <p>{{ slide.slideContent }}</p>
        </div>

    {% else %}
        <div class="content">
          <h4>{{ slide.subTitle }}</h4>
          <h3>{{ slide.slideTitle }}</h3>
          <p>{{ slide.slideContent }}</p>
        </div>
    {% endif %}


    <div class="buttons__wrapper">
      
      {% if slide.typeHandle == 'defaultSlide' %}
        <button data-button="{{ slide.typeHandle + '-' + loop.index + 'share' }}" class="ui__button">
          <p>Share</p>
        </button>
      {% endif %}

      <button data-button="{{ slide.typeHandle + '-' + loop.index + 'prev' }}" class="ui__button">
        <p>Back</p>
      </button>

      <button data-button="{{ slide.typeHandle + '-' + loop.index + 'next' }}" class="ui__button">
        <p>Next</p>
      </button>

    </div>

  </section>

{% endfor %}