{% set prev = 0 %}
{% set next = 0 %}

{% for tourItem in tours %}

  {% if tour == tourItem %}
    {% set current = loop.index0 %}
    {% set prev = loop.index0 - 1 %}
    {% set next = loop.index0 + 1 %}
    {% if prev < 0 %}
      {% set prev = loop.length - 1 %}
    {% endif %}
    {% if next >= loop.length %}
      {% set next = 0 %}
    {% endif %}
  {% endif %}
{% endfor %}

{% set prev = tours[prev] %}
{% set next = tours[next] %}

<a href="{{ prev.slug }}" class="prev tour-pagination">
	<svg viewBox="0 0 18.5 37.6" xml:space="preserve">
		<path d="M15.7,2.8l-13.1,16l13.1,16" />
	</svg>
</a>

<a href="{{ next.slug }}" class="next tour-pagination">
	<svg viewBox="0 0 18.5 37.6" xml:space="preserve">
		<path d="M2.6,34.8l13.1-16L2.6,2.8" />
	</svg>
</a>